# ----------------------------------------------------------------------------
# ARCHIVO DE PLANTILLA DE VARIABLES DE ENTORNO
# ----------------------------------------------------------------------------
# Este archivo contiene todas las variables de entorno utilizadas por el
# Gateway Service. Copia este archivo a .env y configura los valores
# según tu entorno de desarrollo.
# ----------------------------------------------------------------------------

# ----------------------------------------------------------------------------
# CONFIGURACIÓN DE LA APLICACIÓN
# ----------------------------------------------------------------------------

# Puerto HTTP del Gateway Service
# @type {number}
# @default 3001
# @example 3000
# @description Puerto en el que se ejecutará la aplicación HTTP
PORT=3001
HOST=0.0.0.0

# Entorno de ejecución de Node.js
# @type {string}
# @default development
# @example development, production, local
# @description Determina qué configuración de entorno cargar
NODE_ENV=development

# ----------------------------------------------------------------------------
# CONFIGURACIÓN DE BASE DE DATOS
# ----------------------------------------------------------------------------

# Host de la base de datos
# @type {string}
# @example localhost, 127.0.0.1
# @description Host de la base de datos
# @required false
DB_HOST=localhost

# Puerto de la base de datos
# @type {number}
# @example 5432, 3306
# @description Puerto de la base de datos
# @required false
DB_PORT=5432

# Nombre de la base de datos
# @type {string}
# @example gateway_db, ally360_gateway
# @description Nombre de la base de datos
# @required false
# ! Esto debe variar según el tenant-id
DB_DATABASE=master

# Usuario de la base de datos
# @type {string}
# @example postgres, mysql_user
# @description Usuario para autenticarse en la base de datos
# @required false
DB_USERNAME=

# Contraseña de la base de datos
# @type {string}
# @example mypassword, secret123
# @description Contraseña para autenticarse en la base de datos
# @required false
DB_PASSWORD=

# Nombre de la base de datos
# @type {string}
# @example ally360_NN_service
# @description Nombre del esquema de base de datos
# @required false
DB_SCHEMA=storage_service

# ----------------------------------------------------------------------------
# CONFIGURACIÓN DEL STORAGE
# ----------------------------------------------------------------------------

# Endpoint de la API
# @type {string}
# @example http://localhost:9000
# @description Endpoint de la API
# @required true
STORAGE_API_ENDPOINT=host.docker.internal
# Nombre del bucket
# @type {string}
# @example my-bucket
# @description Nombre del bucket
# @required true
STORAGE_BUCKET_NAME=master
# Puerto de la API
# @type {number}
# @example 9000
# @description Puerto de la API
# @required true
STORAGE_PORT=9000
# Usar SSL
# @type {boolean}
# @example true, false
# @description Usar SSL
# @required true
STORAGE_USE_SSL=false

# Clave de acceso
# @type {string}
# @example minioadmin
# @description Clave de acceso
# @required true
STORAGE_ACCESS_KEY=
# Clave de secreto
# @type {string}
# @example minioadmin
# @description Clave de secreto
# @required true
STORAGE_SECRET_KEY=

# ----------------------------------------------------------------------------
# CONFIGURACIÓN DE LOGGING
# ----------------------------------------------------------------------------

# Nivel de logging de la aplicación
# @type {string}
# @default info
# @example debug, info, warn, error
# @description Nivel de detalle para los logs de la aplicación
LOG_LEVEL=info

# ----------------------------------------------------------------------------
# NOTAS IMPORTANTES
# ----------------------------------------------------------------------------
#
# 1. Copia este archivo a .env y configura los valores reales
# 2. Las variables marcadas como @required true son obligatorias
# 3. Las variables comentadas (#) están disponibles para uso futuro
# 4. Nunca commits archivos .env con valores reales de producción
# 5. Usa valores seguros en producción (contraseñas fuertes, URLs HTTPS, etc.)
#
# ----------------------------------------------------------------------------
